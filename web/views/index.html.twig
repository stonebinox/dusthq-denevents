{% extends "layout.html" %}
{% block content %}
<body ng-app="denevents" ng-controller="home">
    <nav class="navbar navbar-default" ng-init="getEvents();getEventTypes();">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span> 
                </button>
                <a class="navbar-brand" href="https://dusthq-denevents.herokuapp.com/"><img src="images/den_logo.png" class="img-responsive" width=120 alt="Denevents"></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-th-list"></span> Browse Events</a></li>
                    <li><a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-th-large"></span> Organize
                        <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Overview</a></li>
                            <li><a href="#">Pricing</a></li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Resources</a></li>
                        </ul>
                    </li>
                    <li><a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-comment"></span> Help
                        <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Where are my tickets?</a></li>
                            <li><a href="#">How to contact the event organizer?</a></li>
                            <li><a href="#">Help Center</a></li>
                        </ul>
                    </li>
                    <li><a href="login" id="accountheader"><span class="glyphicon glyphicon-user"></span> Sign in</a></li>
                    <li><a href="createEvent"><span class="glyphicon glyphicon-plus"></span> Create Event</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div id="hero-event"></div>
        <div class="well">
            <h1 class="text-center">Find your next experience</h1>
            <div class="text-center">
                <form class="form-inline">
                    <div class="form-group">
                        <input type="text" id="search" name="search" placeholder="Search events or categories" class="form-control">
                        <select name="dates" id="dates" class="form-control">
                            <option value="-1">All dates</option>
                            <option value="today">Today</option>
                            <option value="tomorrow">Tomorrow</option>
                            <option value="thisweek">This week</option>
                            <option value="neweek">Next week</option>
                            <option value="this">This month</option>
                            <option value="thisweek">Next month</option>
                        </select>
                    </div>
                    <button type="button" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>
        <hr>
        <h3 class="text-center">Browse Events</h3>
        <div class="well" id="eventlist"></div>
        <hr>
        <h3 class="text-center">Browse by category</h3>
        <div id="categorylist"></div>
    </div>
    <div class="container-fluid">
        <div id="myModal" class="modal fade" role="dialog"></div>
    </div>
    <br>
    <br>
    <br>
    <div id="footer" onclick="window.location='https://twitter.com/thedustmakers';"></div>
</body>
{% endblock %}