{% extends "layout.html" %}
{% block content %}
<body onload="readParams()">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span> 
                </button>
                <a class="navbar-brand" href="https://dusthq-denevents.herokuapp.com/"><img src="images/den_logo.png" class="img-responsive" width=120 alt="Denevents"></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-th-list"></span> Browse Events</a></li>
                    <li><a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-th-large"></span> Organize
                        <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Overview</a></li>
                            <li><a href="#">Pricing</a></li>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Resources</a></li>
                        </ul>
                    </li>
                    <li><a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-comment"></span> Help
                        <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Where are my tickets?</a></li>
                            <li><a href="#">How to contact the event organizer?</a></li>
                            <li><a href="#">Help Center</a></li>
                        </ul>
                    </li>
                    <li class="active"><a href="login" id="accountheader"><span class="glyphicon glyphicon-user"></span> Sign in</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-plus"></span> Create Event</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1 class="text-center">Login to your account</h1>
        <div class="text-center" id="message"></div>
        <div class="well">
            <form method="post" action="login_action">
                <div class="form-group">
                    <label for="email">Email ID</label>
                    <input type="email" name="email" placeholder="Enter a valid email ID" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="Enter your account password" class="form-control" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Login</button>&nbsp;&nbsp;<button type="button" class="btn btn-default" onclick="window.location='registration';">Don't have an account?</button>
                </div>
            </form>
        </div>
    </div>
    <div class="container-fluid">
        <div id="myModal" class="modal fade" role="dialog"></div>
    </div>
    <br>
    <br>
    <br>
    <div id="footer" onclick="window.location='https://twitter.com/thedustmakers';"></div>
</body>
{% endblock %}